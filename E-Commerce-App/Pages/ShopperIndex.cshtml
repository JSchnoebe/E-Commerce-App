@page 
@model E_Commerce_App.Pages.ShopperIndexModel
@{
    Layout = "_ShopperLayout";
}

<h1>Hello Shopper!</h1>

<p>Select a category to start shopping!</p>

<ul>
    @foreach (var category in Model.Categories)
    {
        <li>
            <a asp-page="ProductsPage" asp-route-id="@category.Id">
                @category.Name
            </a>
        </li>
    }
</ul>


