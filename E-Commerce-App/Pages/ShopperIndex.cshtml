@page 
@model E_Commerce_App.Pages.ShopperIndexModel
@{
    Layout = "_ShopperLayout";
}

<h1>Hello Shopper!</h1>

<p>Model type is @Model.GetType().FullName</p>

<ul>
    @foreach (var category in Model.Categories)
    {
        <li>
            <a asp-controller="Categories" asp-action="Details" asp-route-id="@category.Id">
                @category.Name
            </a>
        </li>
    }
</ul>


